<Application x:Class="MiniSocialApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MiniSocialApp"
             StartupUri="Views/LoginView.xaml">
    <Application.Resources>
         <!-- Style global pour TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2e2e3e"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#4a4a6a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- Style global pour PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2e2e3e"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#4a4a6a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- Style global pour Button -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </Application.Resources>
</Application>
