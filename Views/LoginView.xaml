<Window x:Class="MiniSocialApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion"
        Height="400"
        Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e2f"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="MiniSocialApp"
                   FontSize="22"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1"
                VerticalAlignment="Center">
            <!-- Username -->
            <TextBlock Text="Nom d'utilisateur"
                    Foreground="LightGray"
                    Margin="0,0,0,3"/>
            <TextBox Height="35"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Background="#2e2e3e"
                     Foreground="White"
                     BorderBrush="#4a4a6a"
                     Margin="0,5,0,10"/>

            <!-- Password -->
            <TextBlock Text="Mot de passe"
                    Foreground="LightGray"
                    Margin="0,10,0,3"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="35"
                         Background="#2e2e3e"
                         Foreground="White"
                         BorderBrush="#4a4a6a"
                         Margin="0,5,0,10"/>

            <!-- Bouton login -->
            <Button Content="Se connecter"
                    Height="40"
                    Background="#4a90e2"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding LoginCommand}"
                    Margin="0,10,0,0"/>
        </StackPanel>


        <!-- Lien inscription -->
        <TextBlock Grid.Row="2"
                Text="Pas encore de compte ? S'inscrire"
                   Foreground="#4a90e2"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"
                   Cursor="Hand"
                   MouseLeftButtonDown="RegisterLink_Click"/>
    </Grid>
</Window>
